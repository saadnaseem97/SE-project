    </div>

    <div class="row">
  <img src="http://telesens-academy.com/wp-content/uploads/2016/11/cropped-TA-Logo-Violet-Background.png" width=130 height=130 style="margin-left: 4% ; margin-top: -5%;position:relative;float:left">
</div>

    <div class="row" style="clear:left">
    <div class="col-lg-12">
      {{#if success_msg}}
        <div class="alert alert-success" style="margin-left:18.5%">{{success_msg}}</div>
      {{/if}}

      {{#if error_msg}}
        <div class="alert alert-danger" style="margin-left:18.5%">{{error_msg}}</div>
      {{/if}}

      {{#if error}}
        <div class="alert alert-danger" style="margin-left:18.5%">{{error}}</div>
      {{/if}}
      
      {{{body}}}
    </div>
    <!-- <h2 class="page-header"></h2> -->
        {{#if errors}}
              {{#each errors}}
                <div class="alert alert-danger" style="margin-left:18.5%">{{msg}}</div>
              {{/each}}
        {{/if}}
      </div>
    <div class="container-fluid">
      <div class="row">
        <nav class="col-md-2 d-none d-md-block bg-light sidebar" style="margin-top: 2%;position:relative ">
          <div class="sidebar-sticky">
            <ul class="nav flex-column">
              <li class="nav-item">
                <a class="nav-link active" href="/" style="color:#420c7a">
                  <span data-feather="home"></span>
                  HOME <span class="sr-only">(current)</span>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/profile" style="color:#420c7a">
                  <span data-feather="file"></span>
                  PROFILE
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/courses" style="color:#420c7a">
                  <span data-feather="layers"></span>
                  COURSES
                </a>
              </li>
            </ul>

          </div>        
        </nav>
          <main role="main"    class="col-md-9 ml-sm-auto col-lg-10 px-4">
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      
        <h1 class="h2" style="margin-right:-10%;margin-top: 3%; color:#420c7a ;position:relative "><b>Add Course</b></h1>

        <form class="form-signin" method="post" action="/users/addCourse">

        <div style="margin-top:1%;margin-right: 80% ; margin-top:2%;position:relative ">
          <label for="courseName" class="sr-only">Add Courses...</label>
          <input type="text" id="inputCourse" class="form-control" placeholder="Add Courses..." required autofocus name = "courseName">
          <!-- acts as space -->
          <div style="margin-top:5%;margin-right: 0% ;position:relative "> </div>
          <!-- onClick="newElement()" -->
          <button class="btn btn-lg btn-primary btn-block" type="submit" style="background: #7f00c7">Add Course</button>
        </div>

        </form>
  
      </div>

        <div style="margin-top:3%;margin-right: 0% ;position:relative"> </div>
        <div class="btn-group" id="myList">
          <!-- <a href="/SoftWare">Software Engineering</a> -->
          <h4>Once Added, press Show Courses below:</h4>
          <a href="/users/getCourse">Show Courses</a>
          <br>
          <br>
            <div> 
              {{# each items}}
                <a style="display: block; color: black; font-size: 20px; font-weight: bold; text-transform: uppercase" href="/selectcourse/{{this.CourseID}}">{{ this.Course }}</a>
                <!-- <div style="margin-top:1%;margin-right: 0%;position:relative"> </div>  -->  
              {{/each}}
            </div>
          </div>

  <!-- <main> -->
